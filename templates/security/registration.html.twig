{% extends "base.html.twig" %}

{% block body %}
    <header class="masthead">
        <div class="d-flex h-100 align-items-center">
            <div class="mx-auto text-center">
                <h1>Inscrivez-vous</h1>
                {{ form_start(form) }}
                {{ form_row(form.lastname,{'label': '','attr': {'placeholder': 'Nom'}}) }}
                {{ form_row(form.firstname, {'label': '','attr': {'placeholder': 'Prénom'}}) }}
                {{ form_row(form.city, {'label': '','attr': {'placeholder': 'Ville'}}) }}
                {{ form_row(form.birthDate) }}
                {{ form_row(form.email, {'label': '','attr': {'placeholder': 'E-mail'}}) }}
                {{ form_row(form.password, {'label': '','attr': {'placeholder': 'Mot de passe'}}) }}
                {{ form_row(form.confirm_password, {'label': '', 'attr': {'placeholder': 'Répétez mot de passe'}}) }}
                <button type="submit" class="btn btn-primary">Valider</button>
                {{ form_end(form) }}
            </div>
        </div>
    </header>
{% endblock %}