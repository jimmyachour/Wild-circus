{% extends 'base.html.twig' %}

{% block body %}
    <header class="masthead">
        <div class="container d-flex h-100 align-items-center">
            <form method="post">
                <div class="row">
                    {% for ticket in tickets %}
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="assets/img/ticket.jpg" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ ticket.title }} {{ ticket.price }}â‚¬</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk
                                    of the card's content.</p>
                                <div class="form-group row">
                                    <label for="example-number-input" class="col-2 col-form-label"></label>
                                    <div class="col-10">
                                        <input class="form-control"
                                               name="ticket[{{ ticket.id }}]" type="number"
                                                {% if app.session.get('cart') is not null %}
                                                    value="{{ app.session.get('cart')[ticket.id] }}"
                                                {% else %}
                                                    value="0"
                                                {% endif %} id="example-number-input">
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <input type="submit">
            </form>
        </div>
    </header>
{% endblock %}